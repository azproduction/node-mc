.mc {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background: #000;
}

.menu {
    margin: 0;
    background: #0ff;
    color: #000;
    height: 1px;
    min-height: 1px;

    & &__item {
        min-width: 7px;
        text-align: center;
        display: inline-block;
        margin-left: 1px;
        margin-right: 1px;
        color: black;
    }

    &__item-shortcut {
        color: #000;
    }
}

.file-preview {
    display: flex;
    flex-grow: 1;

    color: #fff;
    background: #000;
    overflow: auto;

    &__content {
        flex-grow: 1;
    }

    .hljs-comment,
    .diff .hljs-header,
    .hljs-doctype,
    .hljs-pi,
    .lisp .hljs-string {
        color: gray;
    }

    /* Solarized Green */
    .hljs-keyword,
    .hljs-winutils,
    .method,
    .hljs-addition,
    .css .hljs-tag,
    .hljs-request,
    .hljs-status,
    .nginx .hljs-title {
        color: green;
    }

    /* Solarized Cyan */
    .hljs-number,
    .hljs-command,
    .hljs-string,
    .hljs-tag .hljs-value,
    .hljs-rule .hljs-value,
    .hljs-doctag,
    .tex .hljs-formula,
    .hljs-regexp,
    .hljs-hexcolor,
    .hljs-link_url {
        color: cyan;
    }

    /* Solarized Blue */
    .hljs-title,
    .hljs-localvars,
    .hljs-chunk,
    .hljs-decorator,
    .hljs-built_in,
    .hljs-identifier,
    .vhdl .hljs-literal,
    .hljs-id,
    .css .hljs-function,
    .hljs-name {
        color: blue;
    }

    /* Solarized Yellow */
    .hljs-attribute,
    .hljs-variable,
    .lisp .hljs-body,
    .smalltalk .hljs-number,
    .hljs-constant,
    .hljs-class .hljs-title,
    .hljs-parent,
    .hljs-type,
    .hljs-link_reference {
        color: yellow;
    }

    /* Solarized Orange */
    .hljs-preprocessor,
    .hljs-preprocessor .hljs-keyword,
    .hljs-pragma,
    .hljs-shebang,
    .hljs-symbol,
    .hljs-symbol .hljs-string,
    .diff .hljs-change,
    .hljs-special,
    .hljs-attr_selector,
    .hljs-subst,
    .hljs-cdata,
    .css .hljs-pseudo,
    .hljs-header {
        color: orange;
    }

    /* Solarized Red */
    .hljs-deletion,
    .hljs-important {
        color: red;
    }

    /* Solarized Violet */
    .hljs-link_label {
        color: violet;
    }

    .tex .hljs-formula {
        background: grey;
    }

}

.panels {
    display: flex;
    flex-grow: 1;
}

.panel {
    display: flex;
    flex-direction: column;
    width: 50%;

    border: solid 1px #fff;

    background: #00f;

    & &__caption {
        position: absolute;

        margin-top: -1px;
        color: #fff;
    }

    &_selected .panel__caption {
        color: #000;
        background: #fff;
    }
}

.file-list {
    color: #fff;
    overflow: auto;
}

.header {
    display: flex;
    height: 1px;
    color: white;
}

.file {
    display: flex;
    height: 1px;
    color: white;

    &_state_selected {
        background: #0ff;
        color: #000;

        .file__name,
        .file__size {
            border-right-color: black;
        }
    }

    &_type_file .file__name {
        padding-left: 1px;
    }

    &_type_directory {
        font-weight: bold;
    }
}

.file__name,
.header__name {
    flex-grow: 1;
    border-right: solid 1px #fff;
    overflow: hidden;
    height: 1px;
}

.file__size,
.header__size {
    flex-basis: 10px;
    border-right: solid 1px #fff;
}

.file__size {
    text-align: right;
    overflow: hidden;
}

.file__time,
.header__time {
    flex-basis: 12px;
    text-align: right;
}

.file_state_focused .file__name_type_file {
    color: white;
}

.header__name,
.header__size {
    color: yellow;
    text-align: center;
    font-weight: bold;
}

.header__time {
    color: yellow;
    text-align: left;
    font-weight: bold;
}

.console {
    height: 1px;
    min-height: 1px;
    overflow: hidden;
    color: grey;
    background: #000;
}

.console__input {
    border: none;
    color: #fff;
    background: inherit;
    height: 1px;
    width: 100%;
}

.controls {
    display: flex;
    height: 1px;
    min-height: 1px;
    justify-content: space-around;
}

.control {
    display: flex;

    flex-grow: 1;
    height: 1px;
    min-height: 1px;
    width: 1px;
    min-width: 1px;

    overflow: hidden;

    background: #0ff;

    & &__number {
        width: 2px;
        min-width: 2px;
        flex-basis: 2px;
        text-align: right;

        color: #fff;
        background: #000;
    }

    &__name {
        flex-grow: 1;
        color: #000;
    }
}
