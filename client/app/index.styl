.mc {
    width: 100%;
    height: 100%;
    background: #000;
}

.menu {
    margin: 0;
    background: #0ff;
    color: #000;

    & &__item {
        display: inline-block;
        margin-left: 1px;
        margin-right: 1px;
        color: black;
        height: 1px;
    }

    &__item-shortcut {
        color: #ff0;
    }
}

.content {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    width: 100%;
    height: calc(100% - 3px);
    background: #000;
}

.panel {
    width: 50%;
    border: solid 1px #fff;
    background: #00f;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    float: left;
    height: 100%;

    & &__caption {
        display: inline-block;

        position: absolute;

        margin-top: -1px;
        color: #000;
        background: #fff;
    }
}

.file-list {
    height: 100%;
    color: #fff;
    overflow: auto;
}

.header {
    overflow: hidden;
    height: 1px;
    color: white;
}

.file {
    overflow: hidden;
    height: 1px;
    color: white;

    &_state_selected {
        background: #0ff;
        color: #000;

        .file__name,
        .file__size {
            border-right-color: black;
        }
    }

    & &_type_file .file__name {
        font-weight bold;
    }
}

.file__name,
.file__size,
.file__time,
.header__name,
.header__time,
.header__size {
    float: left;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

.file__name,
.header__name {
    width: 50%;
    border-right: solid 1px #fff;
    overflow: hidden;
    height: 1px;
}

.file__size,
.header__size {
    width: 20%;
    border-right: solid 1px #fff;
}

.file__size {
    text-align: right;
}

.file__time,
.header__time{
    width: 30%;
    text-align: right;
}

.file_state_focused .file__name_type_file {
    color: white;
}

.header__name,
.header__time,
.header__size {
    color: yellow;
    text-align: center;
}

.console {
    height: 1px;
    overflow: hidden;
    color: grey;
    background: #000;
}

.console__input {
    border: none;
    color: #fff;
    background: inherit;
    height: 1px;
    width: 100%;
}

.controls {
    height: 1px;
}

.control {
    float: left;
    height: 1px;

    & &__number {
        margin-left: 1px;
        color: #fff;
    }
}

.control__number,
.control__name {
    float: left;
}

.control__name {
    width: 6px;
    background: #0ff;
    color: #000;
}

.control:last-child .control__number {
    margin-left: 0;
}

.control:first-child .control__number {
    margin-left: 0;
}

.control:last-child .control__name {
    width: 5px;
}
